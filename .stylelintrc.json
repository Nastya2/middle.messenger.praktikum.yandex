{
    "extends": "stylelint-config-standard-scss",
    "rules": {
        "selector-class-pattern": null,
        "declaration-block-no-redundant-longhand-properties": [true, {
            "ignoreShorthands": ["padding", "margin", "border"]
        }]
    },
    "ignoreFiles": [
        "node_modules/*",
        "dist/*",
        ".parcel-cache/*",
        "public/*"
    ]
  } 